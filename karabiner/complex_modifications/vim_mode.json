{
  "title": "Vi Mode (rev 4.3)",
  "rules": [
    {
      "description": "Vi Mode [Space as Trigger Key] (recommended)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 50
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "vi_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "vi_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "optional": [
                "caps_lock",
                "command",
                "option",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "vi_mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "vi_visual_mode",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "optional": [
                "caps_lock",
                "command",
                "option",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "vi_mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "vi_visual_mode",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": [
                "caps_lock",
                "command",
                "option",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "vi_mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "vi_visual_mode",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "optional": [
                "caps_lock",
                "command",
                "option",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "vi_mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "vi_visual_mode",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [ "shift" ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [ "control", "shift" ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "vi_mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "vi_visual_mode",
              "value": 0
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [ "shift" ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [ "control" ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "vi_mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "vi_visual_mode",
              "value": 0
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox"
              ]
            }
          ]
        }
      ]
    }
  ]
}
